#!/bin/bash

sed 's/HOSTIP/'"$HOST_IP"'/g' -i /usr/share/nginx/www/harness.json
service mongodb start
service memcached start
service nginx start

# If user has mounted (vid Docker's -v argument) a directory /import then we'll 
# slurp data from that directory into MongoDB using the file names as collection names.
if [ -d "/import" ]; then
	for dbdir in $(ls -d /import/*); do
		db=$(basename $dbdir)
		for f in $(ls $dbdir/*.js); do
			filename=$(basename $f)
			coll=${filename%.*}
			mongoimport --db $db --collection $coll --file $f
		done
	done
fi

# If /extra is mounted then look for app.config file and glom its contents
# into the 'applications' section of harness.json

if [ -e "/extra/app.config" ]; then
	appconfig=`cat /extra/app.config`
	jq ".applications |= .+ [ $appconfig ]" /usr/share/nginx/www/harness.json > _js_tmp
	mv _js_tmp /usr/share/nginx/www/harness.json
fi

rabbitmq-server
